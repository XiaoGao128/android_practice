<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/riple_btn_corner_3"
    android:gravity="center_horizontal"
    android:layout_height="380dp">

    <TextView
        android:id="@+id/info_tx_1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:text="详细信息"
        android:gravity="center"
        android:textColor="#39B6C2"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="        日期  ："
            android:textColor="#39B6C2"></TextView>
    <TextView
        android:id="@+id/info_tx_2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="text"
        android:textColor="#39B6C2"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="        收支  ："
            android:textColor="#39B6C2"></TextView>

    <TextView
        android:id="@+id/info_tx_3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="text"
        android:textColor="#39B6C2"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="        类型  ："
            android:textColor="#39B6C2"></TextView>
    <TextView
        android:id="@+id/info_tx_4"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="text"
        android:textColor="#39B6C2"></TextView></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="        金额  ："
            android:textColor="#39B6C2"></TextView>
    <TextView
        android:id="@+id/info_tx_5"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="text"
        android:textColor="#39B6C2"></TextView></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="        备注  ："
            android:textColor="#39B6C2"></TextView>
    <TextView
        android:id="@+id/info_tx_6"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:text="text"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColor="#39B6C2"></TextView></LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/riple_btn"
        android:text="我已知晓"
        android:layout_gravity="left"
        android:layout_marginRight="60dp"
        android:textColor="#39B6C2"></Button>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@drawable/riple_btn"
            android:text="删除这条"
            android:textColor="#39B6C2"></Button>
    </LinearLayout>
</LinearLayout>