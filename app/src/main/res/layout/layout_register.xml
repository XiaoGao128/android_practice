<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/riple_btn_corner_3"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:layout_height="match_parent">
        <EditText
            android:id="@+id/adm_name"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:hint="昵称:"
            android:layout_marginTop="20dp"
            android:background="#0A32E9C1"
            android:textColor="#212"
            android:textColorHint="#ACA4A4"
            android:textSize="20dp"></EditText>
    <EditText
        android:id="@+id/adm_et"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:hint="账号:"
        android:layout_marginTop="20dp"
        android:background="#1AE9E1E1"
        android:textColor="#212"
        android:textColorHint="#ACA4A4"
        android:textSize="20dp"></EditText>
    <EditText
        android:id="@+id/adm_et2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:hint="密码:"
        android:layout_marginTop="20dp"
        android:background="#0A35BDCE"
        android:textColor="#212"
        android:textColorHint="#ACA4A4"
        android:inputType="textPassword"
        android:textSize="20dp"></EditText>
        <EditText
            android:id="@+id/adm_et_confirm"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:hint="确认密码:"
            android:layout_marginTop="20dp"
            android:background="#08DB3EF0"
            android:textColor="#212"
            android:textColorHint="#ACA4A4"
            android:inputType="textPassword"
            android:textSize="20dp"></EditText>
    <Button
        android:id="@+id/adm_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="注册"
        android:layout_marginTop="20dp"
        android:background="@drawable/riple_btn"
        android:textSize="25dp"></Button>
</LinearLayout>